{
  "app": {
    "name": "hopeit-agents-example-agents",
    "version": "0.1"
  },
  "engine": {
    "import_modules": ["hopeit_agents.example_agents"]
  },
  "settings": {
  "mcp_client_example_tools": {
      "transport": "http",
      "url": "http://127.0.0.1:8765/mcp",
      "host": "127.0.0.1",
      "port": 8765,
      "tool_cache_seconds": 10.0,
      "list_timeout_seconds": 5.0,
      "call_timeout_seconds": 60.0
    }
  },
  "events": {
    "agents.main_agent": {
      "type": "POST"
    },
    "agents.specialized_agent": {
      "type": "POST",
      "setting_keys": ["mcp_client_example_tools"]
    }
  }
}
