{
  "app": {
    "name": "agent-example",
    "version": "0.1"
  },
  "plugins": [
    { "name": "hopeit-agents-model-client", "version": "0.1" },
    { "name": "hopeit-agents-mcp-bridge", "version": "0.1" }
  ],
  "engine": {
    "import_modules": ["agent_example"],
    "cors_origin": "*"
  },
  "settings": {
    "model_client": {
      "api_base": "${AGENT_MODEL_API_BASE}",
      "api_key_env": "OPENAI_API_KEY",
      "default_model": "${AGENT_MODEL_NAME}",
      "timeout_seconds": 30.0,
      "extra_headers": {
        "OpenAI-Beta": "assistants=v1"
      }
    },
    "mcp_bridge": {
      "transport": "http",
      "url": "http://127.0.0.1:8765/mcp",
      "host": "127.0.0.1",
      "port": 8765,
      "env": {
        "MCP_RANDOM_SEED": "1234"
      },
      "tool_cache_seconds": 10.0,
      "list_timeout_seconds": 5.0,
      "call_timeout_seconds": 60.0
    },
    "agent": {
      "system_prompt": "You are a helpful agent that can call tools via MCP.",
      "enable_tools": true,
      "tool_prompt_template": "You can call the following MCP tools when helpful. Return tool calls with JSON arguments that follow the schema.\n{tool_descriptions}",
      "include_tool_schemas_in_prompt": true
    }
  },
  "events": {
    "run_agent": {
      "type": "POST",
      "setting_keys": ["model_client", "mcp_bridge", "agent"]
    }
  }
}
