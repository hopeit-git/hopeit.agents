{
  "app": {
    "name": "hopeit-agents-model-client",
    "version": "0.1"
  },
  "engine": {
    "import_modules": ["hopeit_agents.model_client"],
    "cors_origin": "*"
  },
  "settings": {
    "model_client": {
      "api_base": "${AGENT_MODEL_API_BASE}",
      "api_key_env": "OPENAI_API_KEY",
      "default_model": "${AGENT_MODEL_NAME}",
      "timeout_seconds": 30.0,
      "extra_headers": {
        "OpenAI-Beta": "assistants=v1"
      }
    },
    "mcp_bridge": {
      "command": "uvx",
      "args": ["python", "-m", "examples.servers.my_mcp_server"],
      "env": {
        "MCP_RANDOM_SEED": "1234"
      },
      "tool_cache_seconds": 10.0,
      "list_timeout_seconds": 5.0,
      "call_timeout_seconds": 60.0
    }
  },
  "events": {
    "api.generate": {
      "type": "POST",
      "setting_keys": ["model_client"]
    }
  }
}
