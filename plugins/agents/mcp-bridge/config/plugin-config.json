{
  "app": {
    "name": "hopeit-agents-mcp-bridge",
    "version": "0.1"
  },
  "engine": {
    "import_modules": ["hopeit_agents.mcp_bridge"],
    "cors_origin": "*"
  },
  "settings": {
    "mcp_bridge": {
      "transport": "http",
      "url": "http://127.0.0.1:8765/mcp",
      "host": "127.0.0.1",
      "port": 8765,
      "env": {
        "MCP_RANDOM_SEED": "1234"
      },
      "tool_cache_seconds": 10.0,
      "list_timeout_seconds": 5.0,
      "call_timeout_seconds": 60.0
    }
  },
  "events": {
    "api.list_tools": {
      "type": "GET",
      "setting_keys": ["mcp_bridge"]
    },
    "api.invoke_tool": {
      "type": "POST",
      "setting_keys": ["mcp_bridge"]
    }
  }
}
